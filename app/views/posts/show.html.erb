<div class='mt-3 p-2 bg-light rounded shadow-sm d-flex'>
  <div class='btn-group-vertical btn-group-sm'>
    <%= link_to '+', upvote_post_path(@post), method: :put, class: 'btn btn-outline-dark' %>
    <span class="badge badge-light w-100"><%= @post.weighted_score %></span>
    <%= link_to '-', downvote_post_path(@post), method: :put, class: 'btn btn-outline-dark' %>
  </div>
  <div class="mx-2 text-justify"><%= @post.content %></div>
</div>

<div class='my-2'>
  <%= link_to 'Back', :back, class: 'btn btn-light shadow-sm' %>

  <small class='p-2'>
    Submitted <%= time_ago_in_words(@post.created_at) %> ago by
    <%= link_to @post.user.username, @post.user %>
  </small>

  <% if can? :manage, @post %>
    <div class='btn-group float-right shadow-sm'>
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-light' %>
      <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light' %>
    </div>
  <% end %>
</div>

<h5 class='mt-4'>Comments</h5>

<%= render 'shared/comments' %>
